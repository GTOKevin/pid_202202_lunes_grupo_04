
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Assets/css/login.css" rel="stylesheet" />
</head>
<body>
    <h2>
        Formulario de inicio de sesión/registro
    </h2>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="#">
                <h1>Crear Cuenta </h1>
                <input type="text" placeholder="Nombre" />
                <input type="password" placeholder="Contraseña" />
                <input type="password" placeholder="Repetir Contraseña" />
                <button>Registrarse</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form action="#">
                <h1>Login</h1>

                <input type="text" placeholder="Nombre" />
                <input type="password" placeholder="Password" />

                <button>Login</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Bienvenido(a)!</h1>
                    <p>Para mantenerse conectado, inicie sesión con su información personal</p>
                    <button class="ghost" id="signIn">Logearse</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hola Amigo(a)!</h1>
                    <p>Ingresa tus datos personales y empieza a laborar</p>
                    <button class="ghost" id="signUp">Registrarse</button>
                </div>
            </div>
        </div>
    </div>


<script src="~/Scripts/Login/login.js"></script>

</body>
</html>
