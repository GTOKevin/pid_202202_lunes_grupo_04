@model Web_Integrador.Model.ReciboModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Recibo /</span>
    Mantenimiento
</h4>

<div id="view-table">
    <div class="card mb-4">
        <div class="card-body ms-auto">
            <button class="btn btn-primary" onclick="btnAction(this,'new')"><i class="bx bx-add-to-queue pe-2"></i>Nuevo Recibo</button>
        </div>
    </div>

    <div class="card">
        <div class="table-responsive text-nowrap card-body">
            <table id="example" class="table table-hover" style="width:100%">
            </table>
        </div>

    </div>
</div>




<form id="view-form" style="display:none">
    <div class="card">
        <div class="align-items-center card-header d-flex justify-content-between">
            <h5 class="fw-semibold m-0">Nuevo Recibo</h5>
            <div>
                <button class="btn btn-danger" type="button" onclick="btnAction(this,'cancel')"><i class="bx bx-arrow-back pe-2"></i>Cancelar</button>
                <button class="btn btn-primary ms-2" type="submit"><i class="bx bx-send pe-2"></i>Guardar</button>
            </div>
        </div>

        <div class="card-body row">
            <input type="text" class="form-control d-none val" autocomplete="off" name="id_recibo" placeholder="id">
            <div class="col-12 col-md-6 mb-3">
                <label for="exampleFormControlInput1" class="form-label">Sucursal</label>
                <select class="form-control val" name="id_sucursal" id="id_sucursal">
                    <option value="" selected>...Seleccione...</option>
                    @foreach (var item in Model.Sucursales)
                    {
                        <option value="@item.id_sucursal">@item.nombre</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="exampleFormControlInput1" class="form-label">Sector</label>
                <select class="form-control val" name="id_sector" id="id_sector">
                    <option value="" selected>...Seleccione...</option>

                </select>
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="exampleFormControlInput1" class="form-label">Torre</label>
                <select class="form-control val" name="id_torre" id="id_torre">
                    <option value="" selected>...Seleccione...</option>
                </select>
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="exampleFormControlInput1" class="form-label">Departamento</label>
                <select class="form-control val" name="id_departamento" id="id_departamento">
                    <option value="" selected>...Seleccione...</option>
                </select>
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="exampleFormControlInput1" class="form-label">Servicio</label>
                <select class="form-control val" name="id_servicio" id="id_servicio">
                    <option value="" selected>...Seleccione...</option>
                </select>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <label for="monto" class="form-label">Monto</label>
                <input type="text" class="form-control val" autocomplete="off" name="monto" placeholder="Ingrese monto">
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <label for="fecha_pago" class="form-label">Fecha de Pago</label>
                <input type="date" class="form-control val" autocomplete="off" name="fecha_pago" placeholder="Ingrese fecha de pago">
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <label for="fecha_vencimiento" class="form-label">Fecha de Vencimiento</label>
                <input type="date" class="form-control val" autocomplete="off" name="fecha_vencimiento" placeholder="Ingrese fecha de vencimiento">
            </div>

        </div>
    </div>
</form>


<script>
    const urlSaveRecibo = "@Url.Action("RegistrarRecibo", "Recibo")";
    const urlGetRecibo = "@Url.Action("ListarRecibos", "Recibo")";
    const urlGetSector = "@Url.Action("ListarSector", "Torre")";
    const urlGetTorre = "@Url.Action("ListarTorre", "Departamento")";
    const urlGetDepartamento = "@Url.Action("ListarDepartamentos", "Departamento")";
    const urlGetServicio = "@Url.Action("ListarServicios", "Servicio")";
    @*const urlGetServicio = "@Url.Action("ListarServicio", "Recibo")";*@

</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
<script src="~/Scripts/App.js"></script>
<script src="~/Scripts/Recibo/Mantenimiento.js"></script>