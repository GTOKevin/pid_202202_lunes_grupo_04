
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> list = ViewBag.lstdocumento;
    List<SelectListItem> list2 = ViewBag.lstgenero;
    List<SelectListItem> list3 = ViewBag.lstnacionalidad;
}


<form id="form-create">
    <div class="card">
        <div class="align-items-center card-header d-flex justify-content-between">
            <h5 class="fw-semibold m-0">Cambiar Contraseña</h5>
            <div>
                <button class="btn btn-success ms-2" type="submit"><i class="bx bx-send pe-2"></i>Guardar</button>
            </div>
        </div>

        <div class="card-body row">

            <input type="text" value="@Session["PI_IDUSER"]" class="form-control d-none creat" autocomplete="off" name="id_usuario" placeholder="id">

            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Contraseña</label>
                <input type="password" class="form-control creat" autocomplete="off" name="clave" placeholder="Ingrese su contraseña">
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Repetir Contraseña</label>
                <input type="password" class="form-control" autocomplete="off" name="clave2" placeholder="Repita su contraseña">
            </div>

        </div>
    </div>
</form>

<br />
<br />

<form id="form-create-perfil" >
    <div class="card">
        <div class="align-items-center card-header d-flex justify-content-between">
            <h5 class="fw-semibold m-0">Configurar Perfil</h5>
            <div>
                <button class="btn btn-primary ms-2" type="submit"><i class="bx bx-send pe-2"></i>Guardar mis datos</button>
            </div>
        </div>

        <div class="card-body row">
            <input type="text" value="@Session["PI_IDUSER"]" class="form-control d-none creat" autocomplete="off" name="id_perfil" placeholder="id">
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Nombre</label>
                <input type="text" class="form-control creat" autocomplete="off" name="nombres" placeholder="Ingrese nombre de usuario">
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">
                    Primer Apellido
                </label>
                <input type="text" class="form-control creat" autocomplete="off" name="primer_apellido" placeholder="Ingrese su apellido">
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Segundo Apellido</label>
                <input type="text" class="form-control creat" autocomplete="off" name="segundo_apellido" placeholder="Ingrese su apellido">
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Fecha Nacimiento</label>
                <input type="datetime" class="form-control creat" autocomplete="off" name="fecha_nacimiento" placeholder="Ingrese su fecha de nacimiento">
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Tipo Documento</label>
                <select class="form-select val creat" name="tipo_documento">
                    <option value="">..Seleccione..</option>
                    @for (int i = 0; i < list.Count; i++)
                    {
                        <option value="@list[i].Value">@list[i].Text</option>
                    }
                </select>
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Nro de Documento</label>
                <input type="text" class="form-control creat" autocomplete="off" name="nro_documento" placeholder="Ingrese su nro de documento">
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Genero</label>
                <select class="form-select val creat" name="genero">
                    <option value="">..Seleccione..</option>
                    @for (int i = 0; i < list2.Count; i++)
                    {
                        <option value="@list2[i].Value">@list2[i].Text</option>
                    }
                </select>
            </div>
            <div class="col-4">
                <label for="exampleFormControlInput1" class="form-label">Nacionalidad</label>
                <select class="form-select val creat" name="nacionalidad">
                    <option value="">..Seleccione..</option>
                    @for (int i = 0; i < list3.Count; i++)
                    {
                        <option value="@list3[i].Value">@list3[i].Text</option>
                    }
                </select>
            </div>
            <div class="col-10">
                <label for="exampleFormControlInput1" class="form-label">Direccion</label>
                <input type="text" class="form-control creat" autocomplete="off" name="direccion" placeholder="Ingrese su direccion">
            </div>
        </div>
    </div>
</form>


